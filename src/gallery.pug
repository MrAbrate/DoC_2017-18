//- scratch.pug
extends layout.pug

block content
  #canvas
  .container.text-center
    h1 Gallery
    
    section.scratch-section
      h2 Scratch Projects
      p Visit the Day of Code  #[a(href="https://scratch.mit.edu/studios/4387897/" target="_blank") Scratch Studio] to see what other students have made and share your own project. #[br]If you need help sharing your project, checkout the #[a(href="https://wiki.scratch.mit.edu/wiki/Studio#Adding_Projects" target="_blank") Scratch Wiki] page.
      a(href="https://scratch.mit.edu/studios/4387897/" target="_blank").scratch-studio-btn: img(src="/img/scratch-btn.gif")
    
      // Load projects from depricated Scratch API
      //ul#scratch-gallery
      // div(style="text-align:center;"): #load-more-scratch-projects More
    
    section.text-section
      h2 Text Projects &amp; App Lab
      a(href="https://docs.google.com/forms/d/e/1FAIpQLSfVaXrolqW6qzPIbgzlwkCBmZ0wnQ5HbvRjpmtfM04G7Xi4mA/viewform") Share here
      br
      br
      .projects
        .loading-msg Loading...
      .text-center
        .more-btn Show more
    
    section.nasa-3d-section
      h2
        img(src="/img/tinkercad-logo.png")
        span 3D Models
        span.small (2 for the Crew Challenge)
      a(href="https://docs.google.com/forms/d/e/1FAIpQLSfVaXrolqW6qzPIbgzlwkCBmZ0wnQ5HbvRjpmtfM04G7Xi4mA/viewform") Share here
      br
      br
      .projects
        .loading-msg Loading...
      .text-center
        .more-btn Show more
        
    section.picture-section
      h2 Pictures
      p See students create musical instruments with Makey Makey and get some inspiration for your next Scratch story from the personal avatar gallery.
      a.image-gallery-button Click here
    
block scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.16/p5.min.js')
  script(src='/js/bundle.js')
  script(src='/js/gallery.js')
